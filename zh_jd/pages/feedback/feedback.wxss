/* 实现textarea高度自适应 */

page {
  margin: 0 !important;
}

.detail-view {
  position: relative;
  margin: 40rpx 20rpx;
  height: 900rpx;
}

.detail-placeholder {
  position: absolute;
  padding: 0 10rpx;
  min-height: 100%;
  color: #c9c9c9;
  font-size: 28rpx;
}

.detail-textarea {
  width: 85%;
  margin: 0 auto;
  font-size: 30rpx;
  background-image: url(https://www.tiantiandj.com/xcx/upload/notable/bg.png);
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  line-height: 60rpx;
}

.feedback_title {
  text-align: center;
  margin: 40rpx 0;
  font-size: 30rpx;
  font-family: SourceHanSansCN-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.feedback_sumbit {
  width: 100%;
  height: 100rpx;
  background: #40ab91;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
}
