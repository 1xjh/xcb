/* zh_jd/pages/yuanzi_details/dianping.wxss */

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.comment_top {
  font-size: 20rpx;
  justify-content: space-around;
  width: 93%;
  height: 113rpx;
  background: #ecf6f4;
  margin: 20rpx auto;
  color: #5f5f5f;
}

.comment_image image {
  width: 30rpx;
  height: 30rpx;
}

.comment_left_fen {
  color: #40ab91;
  font-size: 28rpx;
}

.comment_right {
  line-height: 40rpx;
  margin-top: 14rpx;
}

/* 内容 */

.comment_content_box {
  width: 93%;
  margin: 0 auto;
}

.comment_content {
  margin: 80rpx 0;
}

/* 头像 */

.comment_title image {
  width: 60rpx;
  height: 60rpx;
}

.comment_title_time .comment_title_name {
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.comment_title_time {
  font-size: 18rpx;
  font-weight: 400;
  color: #5f5f5f;
  margin-left: 10rpx;
  margin-top: -5rpx;
}

.comment_fen {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(95, 95, 95, 1);
  margin-left: 10rpx;
}

.comment_fen image {
  width: 18rpx;
  height: 18rpx;
}

.comment_a_content {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 40rpx;
}

.comment_info_image {
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.comment_info_image image {
  width: 100%;
  height: 100%;
  display: block;
}
.comment_info_image >view{
  width: 172rpx;
  height: 130rpx;
  margin-left: 3rpx;
}

.hui_fu {
  background: #ecf6f4;
  padding: 10rpx;
}

.hui_fu view {
  color: #40ab91;
  font-size: 24rpx;
}

.hui_fu text {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 40rpx;
}

.comment_gendou {
  position: absolute;
  background: #fff;
  right: 29rpx;
  width: 215rpx;
  margin-top: -38rpx;
  color: #40ab91;
}

.content_a {
  overflow: hidden;
  text-indent: length(100);
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.content_a.on {
  display: block;
  text-overflow: clip;
  overflow: visible;
  transform: 5s;
}

/* 。。。。。。。。。。。。。。。。。。。 */
.conmmentbox{
  display: inline-block;
  font-size: 22rpx;
  color: #F74754;
}
.conmmentstars{
  width: 26rpx;
  height: 26rpx;
}
.doortimes{
	color: #F74754;
	margin-left: 10rpx;
}
.starbox{
	width: 130rpx;
	height: 30rpx;
	position: relative;
	display: inline-block;
	overflow: hidden;
	float: left;
}
.stars{
	width: 130rpx;
	height: 30rpx;
	position: relative;
	top: 0;
	left: 0;
	overflow: hidden;
}
.stars2{
	height: 30rpx;
	width: 130rpx;
	overflow: hidden;
	position: absolute;
	top: 0;
	left: 0;
}
.stars image,.stars2 image{
	width: 26rpx;
	height: 26rpx;
	float: left;
	white-space:nowrap;
}
.stars view,.stars2 view{
	width: 130rpx;
	position: absolute;
}