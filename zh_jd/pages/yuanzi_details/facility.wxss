
.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.facility_title {
  padding: 20rpx 0;
  color: #40ab91;
  font-size: 35rpx;
}

.facility_box {
  width: 90%;
  margin: 0 auto;
  border-top:1px solid #eeeeee;
}

.facility_content {
  width: 100%;
  flex-wrap: wrap;
}

.facility_content>view {
  flex-direction: column;
  align-items: center;
  width: 20%;
   padding-bottom: 40rpx;
}

.facility_content image {
  width: 65rpx;
  height: 65rpx;
}

.facility_content text {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}
