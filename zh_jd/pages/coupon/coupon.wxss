/* zh_jd/pages/coupon/coupon.wxss */

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.coupon {
  display: none;
}
.active {
  border: 1px solid #A4A4A4;
  border-right: none;
  width: 95%;
  margin: 20rpx auto;
  height: 180rpx;
  color: #A4A4A4;
  justify-content: space-between;
}
.coupon_price {
  font-size: 60rpx;
  font-family: FZCQJW--GB1-0;
  font-weight: bold;
}

.coupon_price view:last-child{
  margin-left: 61rpx;
  margin-top: -25rpx;
}
.coupon_content>view:last-child{
  white-space: nowrap;
}
.coupon_content {
  width: 30%;
  font-size: 18rpx;
  font-family: SimSun;
  font-weight: 400;
  height: 100rpx;
  margin-top:10rpx;
}

.coupon_image {
  width: 33%;  
  background:#fff;
}
.coupon_image image{
  width: 100%;
  height: 100%;
}
/* 顶部 */

.effective,already,overdue{
  color: #41ac8d
}
.default{
  color: #222;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
}
.background{
  width: 100%;
  height: 60%;
  top: 0;
  background: #F9882B;
  z-index: 1;
}
.option{
  height: 100%;
  background: #fff;
  z-index: 100;
}
.option_son{
  width: 100%;
  height: 30rpx;
  display: flex;
}
.option_son>view{
  flex:3;
  border-right: 1rpx solid #222;
  text-align: center;
  line-height: 30rpx;
  font-size: 28rpx;
}
.option_son>view:nth-child(3){
  border: none;
}
.coupons{
  width: 90%;
  height: auto;
  margin: 0 auto;
}
.coupons_son{
  width: 100%;
  height: 150rpx;
  border-radius: 8rpx; 
  margin-bottom: 10rpx;
  color: #222;
  background: #fff;
  /* background: linear-gradient(to right, #F9882B , #5C38F7); */
  overflow: hidden;
}
.none_coupon{
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx; 
}
.none_coupon>view{
  width: 400rpx;
  height: 250rpx;
}
.none_coupon>view view{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  bottom: 0;
}
.none_coupon image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}