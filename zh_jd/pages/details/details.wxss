/* 输入框 */

.details_head {
  height: 60rpx;
  width: 90%;
  margin: 0 auto;
}

.details_head>view {
  margin-top: 10rpx;
  display: flex;
  background: #eee;
  border-radius: 50rpx;
  width: 100%;
  height: 66rpx;
}

.details_icon {
  width: 55rpx;
  margin-left: 23rpx;
}

.details_search {
  width: 85%;
  margin-top: 7rpx;
  font-size: 24rpx;
}

.screening_box {
  margin-top: 20rpx;
  background: #f7f6f6;
  height: 100%;
}

/* 筛选screening */

.tabTit {
  height: 65rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  background: #fff;
  font-size: 15px;
  text-align: center;
  justify-content: space-around;
  align-items: center;
}

.fle1 image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  padding-left: 10rpx;
}

.fle1 {
  overflow: hidden;
  display: block;
  line-height: 28rpx;
  padding:14rpx;
}

/*弹性盒模型*/

.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

/* 详情列表 */

.d_bakcground {
  height: 10rpx;
  width: 100%;
  background: #eee;
}

.d_content {
  width: 95%;
  margin: 70rpx auto;
  background: #fff;
  height: 720rpx;
  border-radius: 10rpx;
}

.d_img {
  width: 100%;
  height: 440rpx;
}

.d_img image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.d_good {
  margin-top: 40rpx;
}

.d_good>view {
  margin:0rpx 10rpx;
  border: 1px solid #888;
  height: 26rpx;
  font-family: SourceHanSansCN-Medium;
  font-weight: 500;
  border-radius: 5rpx;
  line-height: 16rpx;
}

.d_good .d_good_font {
  font-size: 20rpx;
  padding: 5rpx;
  color: #888;
  text-align: center;
}

.d_title {
  margin-top: 28rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.d_site_name {
  height:52rpx;
  font-size: 35rpx;
  color: #222;
}

.d_info {
  padding-top: 15rpx;
  margin-left:10rpx;
}

.d_info .d_fang {
  font-size: 26rpx;
}

.d_info .d_ren {
  font-size: 22rpx;
  margin-left: 20rpx;
  line-height:45rpx;
}

.d_info .d_fen {
  font-size: 20rpx;
  color: #40ab91;
  margin-left: 35rpx;
  line-height:45rpx;
}

.d_price1 {
  font-size: 30rpx;
  padding-bottom: 16rpx;
}

.d_price2 {
  font-size: 24rpx;
  margin-top: 5px;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.d_vip {
  margin-left: 20rpx;
  font-size: 21rpx;
  color: #ffa500;
  border: 1px solid #ffdead;
  background: #ffdead;
  height: 31rpx;
  padding: 0rpx 10rpx;
  line-height: 30rpx;
  letter-spacing: 3rpx;
  margin-top:6rpx;
}


/* 无房 */

.d_yuding>view {
  font-size: 24rpx;
  text-align: center;
}

.none_coupon {
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx;
}

.none_coupon>view {
  width: 400rpx;
  height: 250rpx;
}

.none_coupon>view view {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  bottom: 0;
}

.none_coupon image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.tuijian {
  width: 100%;
  text-align: center;
}
